#!/bin/bash

DISTRO=$(cat /etc/os-release | grep "^ID=" | cut -d= -f2)
DISTRO=${DISTRO//\"/}

if  [ "$DISTRO" == "ubuntu" ] || [ "$DISTRO" == "debian" ]; then
    sudo apt-get update
elif [ "$DISTRO" == "centos" ] || [ "$DISTRO" == "rhel" ]; then
    sudo yum update
elif [ "$DISTRO" == "fedora" ]; then
    sudo dnf update
else
    echo "Distro not supported"
    exit 1
fi

if ! [ -x "$(command -v curl)" ]; then
    if  [ "$DISTRO" == "ubuntu" ] || [ "$DISTRO" == "debian" ]; then
        sudo apt-get install -y curl
    elif [ "$DISTRO" == "centos" ] || [ "$DISTRO" == "rhel" ]; then
        sudo yum install curl -y
    elif [ "$DISTRO" == "fedora" ]; then
        sudo dnf install curl -y
    fi
fi
if ! [ -x "$(command -v unzip)" ]; then
    if  [ "$DISTRO" == "ubuntu" ] || [ "$DISTRO" == "debian" ]; then
        sudo apt-get install -y unzip
    elif [ "$DISTRO" == "centos" ] || [ "$DISTRO" == "rhel" ]; then
        sudo yum install unzip -y
    elif [ "$DISTRO" == "fedora" ]; then
        sudo dnf install unzip -y
    fi
fi
if ! [ -x "$(command -v php)" ]; then
    if  [ "$DISTRO" == "ubuntu" ] || [ "$DISTRO" == "debian" ]; then
        read -p "¿Desea instalar php? (y/n): " RESPONSE
        if [ "$RESPONSE" == 'y' ]; then
            read -p "¿Que version de php desea instalar? (8.1/8.2/8.3): " PHP_VERSION
            if [ "$PHP_VERSION" == '8.1' ] || [ "$PHP_VERSION" == '8.2' ] || [ "$PHP_VERSION" == '8.3' ]; then
                sudo apt-get install -y software-properties-common
                sudo add-apt-repository ppa:ondrej/php
                sudo apt-get update
                sudo apt-get install -y php${PHP_VERSION} php${PHP_VERSION}-curl php${PHP_VERSION}-xml php${PHP_VERSION}-xmlrpc php${PHP_VERSION}-zip php${PHP_VERSION}-dev php${PHP_VERSION}-intl php${PHP_VERSION}-mbstring php${PHP_VERSION}-bcmath php${PHP_VERSION}-gd php${PHP_VERSION}-mysql php${PHP_VERSION}-pgsql php${PHP_VERSION}-sqlite3 php${PHP_VERSION}-redis php${PHP_VERSION}-memcached php${PHP_VERSION}-imagick php${PHP_VERSION}-xdebug
            else
                echo "PHP version not supported"
            fi
        else
            echo "PHP is not installed"
        fi
    elif [ "$DISTRO" == "centos" ] || [ "$DISTRO" == "rhel" ]; then
        read -p "¿Desea instalar php? (y/n): " RESPONSE
        if [ "$RESPONSE" == 'y' ]; then
            read -p "¿Que version de php desea instalar? (8.1/8.2/8.3): " PHP_VERSION
            if [ "$PHP_VERSION" == '8.1' ] || [ "$PHP_VERSION" == '8.2' ] || [ "$PHP_VERSION" == '8.3' ]; then
                sudo yum install epel-release -y
                sudo yum install http://rpms.remirepo.net/enterprise/remi-release-7.rpm -y
                sudo yum install yum-utils -y
                sudo yum-config-manager --enable remi-php${PHP_VERSION}
                sudo yum update
                sudo yum install php php-curl php-xml php-xmlrpc php-dev php-zip php-swoole php-intl php-mbstring php-bcmath php-gd php-mysql php-pgsql php-sqlite3 php-redis php-memcached php-imagick php-xdebug -y
            else
                echo "PHP version not supported"
            fi
        else
            echo "PHP is not installed"
        fi
    elif [ "$DISTRO" == "fedora" ]; then
        read -p "¿Desea instalar php? (y/n): " RESPONSE
        if [ "$RESPONSE" == 'y' ]; then
            read -p "¿Que version de php desea instalar? (8.1/8.2/8.3): " PHP_VERSION
            if [ "$PHP_VERSION" == '8.1' ] || [ "$PHP_VERSION" == '8.2' ] || [ "$PHP_VERSION" == '8.3' ]; then
                sudo dnf install https://rpms.remirepo.net/fedora/remi-release-$(rpm -E %fedora).rpm -y
                sudo dnf install dnf-utils -y
                sudo dnf module enable php:remi-${PHP_VERSION} -y
                sudo dnf update -y
                sudo dnf install php php-curl php-xml php-xmlrpc php-dev php-zip php-swoole php-intl php-mbstring php-bcmath php-gd php-mysql php-pgsql php-sqlite3 php-redis php-memcached php-imagick php-xdebug -y
            else
                echo "PHP version not supported"
            fi
        else
            echo "PHP is not installed"
        fi
    fi
fi
if ! [ -x "$(command -v composer)" ] && [ -x "$(command -v php)" ]; then
    read -p "¿Desea instalar composer? (y/n): " RESPONSE
    if [ "$RESPONSE" == 'y' ]; then
        php -r "copy('https://getcomposer.org/installer', 'composer-setup.php');"
        php composer-setup.php
        php -r "unlink('composer-setup.php');"
        sudo mv composer.phar /usr/local/bin/composer
    fi
fi

if ! [ -x "$(command -v docker)" ]; then
    read -p "¿Desea instalar docker? (y/n): " RESPONSE
    if [ "$RESPONSE" != 'y' ]; then
        echo "Docker is not installed"
        exit 1
    fi
    curl https://get.docker.com | bash
fi

ENDPOINT="https://raw.githubusercontent.com/byancode/doravel/main"

if [ ! -d ~/bin ]; then
    mkdir ~/bin
fi

curl -s $ENDPOINT/bin/doravel -o ~/bin/doravel
curl -s $ENDPOINT/bin/dlocal -o ~/bin/dlocal
curl -s $ENDPOINT/bin/dtest -o ~/bin/dtest
curl -s $ENDPOINT/bin/dprod -o ~/bin/dprod
curl -s $ENDPOINT/bin/dmain -o ~/bin/dmain

chmod +x ~/bin/d*

if [ -f ~/bin/doravel ]; then
    ln -sf ~/bin/doravel ~/bin/dv
fi

source ~/.bashrc
