#!/bin/sh

EXTENSION=$1
VERSION=$2

if [ -z "$EXTENSION" ]; then
    echo "Extension is required";
    exit 1;
fi

if [ -z "$VERSION" ]; then
    echo "Version is required";
    exit 1;
fi

cd /tmp/php/extensions;
tar -xf ${EXTENSION}-${VERSION}.tgz;
cd ${EXTENSION}-${VERSION};

echo "Building ${EXTENSION} ${VERSION}...";

phpize;
./configure;

make;
make install;

echo "Installed success ${EXTENSION} ${VERSION}";
