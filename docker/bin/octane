#!/bin/sh

ENV=$1
shift

URL="http://localhost"
PHP_INI_FILE=/usr/local/etc/php/php.ini
ARTISAN="/usr/local/bin/php -c $PHP_INI_FILE -d variables_order=EGPCS /var/www/artisan"

while true; do
    if $ARTISAN --env=$ENV octane:status | grep -q running; then
        $ARTISAN --env=$ENV octane:stop
    fi
    $ARTISAN --env=$ENV octane:start --server=swoole --host=0.0.0.0 --port=8000 --quiet $@
    sleep 1
done
